<MDInkWell
  height="56dp"
  padding="16dp"
  minWidth="80dp"
  borderRadius='glm::vec4(e3::Dim("16dp"))'
  overflow="Hidden"
  backgroundColor="MDTheme::Get()->PrimaryContainer">
  <include path="MDTheme.h" />

  <MDIcon
    visibility="Hidden"
    element="mIcon"
    width="24dp"
    margin="0"
    marginRight="8dp"
    aspectRatio="1"
    color="MDTheme::Get()->OnPrimaryContainer">
  </MDIcon>

  <MDText
      element="mLabel"
      fontStyle="Bold"
      fontSize="18dp"
      textColor="MDTheme::Get()->OnPrimaryContainer">
  </MDText>

  <Element
    element="mHover"
    height="100%"
    scaling="Grow"
    positionType="Absolute">
  </Element>

  <Shadow
    color="all: 60"
    opacity="1.0"
    offset="x: 0, y: 8"
    blurSize='e3::Dim("8dp")'>
  </Shadow>

</MDInkWell>