<Element
  orientation="Horizontal"
  overflow="Hidden">
  <Shadow
    color="all: 100"
    offset="x: 0, y: 10"
    blurSize="20"
    opacity="1">
  </Shadow>
 
  <Element
    orientation="Vertical"
    alignItemsHor="Start"
    width="100%">
    <Element
      element="mContent"
      overflow="Scroll"
      orientation="Horizontal"
      width="100%"
      scaling="Shrink">

    </Element>
    <Element
      width="100%"
      positionType="Absolute"
      left="0"
      bottom="0"
      alignItemsHor="Start"
      backgroundColor="MDTheme::Get()->SurfaceVariant"  >
      <MDElement
        element="mSelection"
        backgroundColor="MDTheme::Get()->PrimaryColor"
        width="100%"
        height="2dp">
      </MDElement>
    </Element>
  </Element>

</Element>