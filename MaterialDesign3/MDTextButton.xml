<MDInkWell
  height="40dp"
  borderRadius="all: 0.5"
  overflow="Hidden"
  paddingLeft="12dp"
  paddingRight="12dp">

  <include path="MDTheme.h"/>

  <MDIcon
      element="mIcon"
      margin="0"
      marginRight="8dp"
      visibility="Hidden"
      width="18dp"
      color="MDTheme::Get()->PrimaryColor"
      aspectRatio="1">
  </MDIcon>
  <MDText
      element="mLabel"
      fontStyle="Bold"
      fontSize="18dp"
      textColor="MDTheme::Get()->PrimaryColor">
  </MDText>
  <Element
    element="mHover"
    borderRadius="all: 0.5"
    height="100%"
    scaling="Grow"
    positionType="Absolute">
  </Element>

</MDInkWell>