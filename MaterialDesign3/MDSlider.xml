<Element
  width="300dp"
  height="20dp">

  <Element
    element="mHoverCircle"
    positionType="Absolute"
    left="0"
    opacity="0"
    aspectRatio="1"
    height="100%"
    shapeType="Circle">
  </Element>

  <Element
    element="mBackground"
    width="100%"
    height="4dp"
    borderRadius="all: 0.5">
  </Element>

  <Element
    element="mValue"
    positionType="Absolute"
    left="0"
    height="4dp"
    borderRadius="all: 0.5">
  </Element>

  <Element
    element="mDivisions"
    positionType="Absolute"
    alignItemsHor="SpaceBetween"
    left="0"
    width="100%"
    height="6dp">
  </Element>



  <Element
    element="mInfo"
    positionType="Absolute"
    left="0"
    orientation="Vertical"
    visibility="Gone">
    <MDElement
      element="mInfoShape"
      backgroundColor="MDTheme::Get()->PrimaryColor"
      borderRadius="all: 0.5">
      <Text
        element="mInfoText"
        fontSize="14dp"
        textColor="MDTheme::Get()->OnPrimary"
        marginLeft="8dp"
        marginRight="8dp"
        marginTop="4dp"
        marginBottom="4dp">
      </Text>
    </MDElement>
    <MDElement
      element="mInfoTriangle"
      width="10dp"
      height="5dp"
      borderType="Cut"
      borderRadius="glm::vec4(0, 0, 1, 1)"
      backgroundColor="MDTheme::Get()->PrimaryColor">
    </MDElement>
  </Element>
  <Element
    element="mCircle"
    positionType="Absolute"
    left="0"
    aspectRatio="1"
    opacity="1.0"
    height="100%"
    shapeType="Circle"
    backgroundColor="glm::vec4(96, 2, 238, 255)">
  </Element>

</MDBaseElement>