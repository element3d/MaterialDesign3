<MDInkWell
  width="56dp"
  aspectRatio="1"
  height="56dp"
  padding="16dp"
  borderRadius='glm::vec4(e3::Dim("16dp"))'
  overflow="Hidden">

  <MDIcon
    element="mIcon"
    width="24dp"
    margin="0"
    aspectRatio="1">
  </MDIcon>

  <Element
    element="mHover"
    height="100%"
    scaling="Grow"
    positionType="Absolute">
  </Element>
  <Shadow
    color="glm::vec4(100, 100, 100, 250)"
    opacity="0.6"
    offset="x: 0, y: 8"
    blurSize='e3::Dim("4dp")'>
  </Shadow>

</MDInkWell>