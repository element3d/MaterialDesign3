<MDElement
  orientation="Vertical"
  overflow="Scroll"
  alignItemsHor="Center"
  alignItemsVer="Start"
  paddingBottom="m :0, d: 50"
  backgroundColor="MDTheme::Get()->SurfaceVariant">


  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      color="MDTheme::Get()->OnSurface"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>



  <MDScaffold
    element="mScaffold"
    marginTop="m: 0, d: 50"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical"
    backgroundColor="all: 255">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarAction
        element="mDrawerButton"
        name="_s(menu)">
      </MDAppBarAction>
      <MDAppBarTitle
        text="Drawer">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

     
    </Element>
    <MDDrawer
      element="mDrawer"
      scaffold="mScaffold"
      >
      <MDElement
        width="m: 80%, d: 60%"
        height="100%"
        overflow="Hidden"
        alignItemsVer="Start"
        orientation="Vertical">

        <Element
          width="100%"
          height="30%"
          backgroundColor="MDTheme::Get()->PrimaryColor">

        </Element>
        <MDDrawerMenuBody>
          <MDDrawerMenuItem
              element="mItem1"
              icon='"search"'
              title="_s(Search)">
          </MDDrawerMenuItem>
          <MDDrawerMenuItem
            element="mItem2"
            icon='"3d_rotation"'
            title="_s(3D)">
          </MDDrawerMenuItem>
          <MDDrawerMenuItem
            icon='"double_arrow"'
            title="_s(Accelerator)">
          </MDDrawerMenuItem>
          <MDDrawerMenuItem
            icon='"dashboard"'
            title="_s(Dashboard)">
          </MDDrawerMenuItem>
          <MDDivider>
          </MDDivider>
          <MDDrawerMenuLabel
            text="Labels">
          </MDDrawerMenuLabel>
          <MDDrawerMenuItem
            icon='"logout"'
            title="_s(Logout)">
          </MDDrawerMenuItem>
        </MDDrawerMenuBody>

      </MDElement>
    </MDDrawer>
  </MDScaffold>

</MDElement>