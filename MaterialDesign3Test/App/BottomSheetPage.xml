<MDElement
  orientation="Vertical"
  overflow="Scroll"
  alignItemsHor="Center"
  alignItemsVer="Start"
  paddingBottom="m: 0, d: 50"
  backgroundColor="MDTheme::Get()->SurfaceVariant">

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <BackIcon element="mBack"></BackIcon>
  </Element>

  <MDScaffold
    marginTop="m: 0, d:50"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical">
    <MDAppBar
      alignItemsHor="SpaceBetween">
      <MDAppBarTitle
        text="Bottom sheet">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">
      <MDButton
        element="mShowButton"
        label="_s(SHOW BOTTOM SHEET)">
      </MDButton>
    </Element>
    <MDBottomSheet
      element="mBottomSheet">
      <Element
        height="300dp"
        alignItemsVer="Start"
        orientation="Vertical">
       
        <Element
          width="100%"
          height="70dp">
          <Text
            text="Header"
            fontSize="18dp"
            textColor="MDTheme::Get()->OnSurfaceVariant">
          </Text>
        </Element>
        <MDListView
          element="mList">
        </MDListView>
      </Element>
    </MDBottomSheet>
  </MDScaffold>

</MDElement>