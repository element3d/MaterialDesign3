<MDElement
  orientation="Vertical"
  overflow="Scroll"
  alignItemsHor="Center"
  alignItemsVer="Start"
  paddingBottom="m: 0, d: 50"
  backgroundColor="MDTheme::Get()->SurfaceVariant">

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <MDScaffold
    marginTop="m: 0, d: 20"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarTitle
        text="Tabs">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <MDTabBar
        element="mTabBar"
        width="100%"
        isScrollable="false">
        <MDTab
          leadingIcon="_s(favorite)"
          textLabel="_s(Red)">
        </MDTab>
        <MDTab
          leadingIcon="_s(favorite)"
          textLabel="_s(Orange)">
        </MDTab>
        <MDTab
          leadingIcon="_s(favorite)"
          textLabel="_s(Green)">
        </MDTab>
      </MDTabBar>
      <MDTabBarView
        element="mTabBarView"
        tabBar="mTabBar"
        width="100%"
        height="100%"
        scaling="Shrink">

        <Element>
          <MDText
            text="Red"
            textColor="MDTheme::Get()->OnSurface"
            fontSize="30dp">
          </MDText>
        </Element>
        <Element>
          <MDText
            text="Orange"
            textColor="MDTheme::Get()->OnSurface"
            fontSize="30dp">
          </MDText>
        </Element>
        <Element>
          <MDText
            text="Green"
            textColor="MDTheme::Get()->OnSurface"
            fontSize="30dp">
          </MDText>
        </Element>

      </MDTabBarView>
    </Element>
  </MDScaffold>


  

</MDElement>