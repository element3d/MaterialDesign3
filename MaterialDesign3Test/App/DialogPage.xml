<MDElement
  orientation="Vertical"
  overflow="Scroll"
  alignItemsHor="Center"
  alignItemsVer="Start"
  paddingBottom="m: 0, d: 50"
  backgroundColor="MDTheme::Get()->SurfaceVariant">

  <Element
    width="100%"
    height="m: 0, d: 40"
    alignItemsHor="Start">
    <MDIconButton
      element="mBack"
      name="_s(arrow_back)">
    </MDIconButton>
  </Element>

  <MDScaffold
    marginTop="m: 0, d: 50"
    width="m: 100%, d: 500"
    height="m: 100%, d: 700"
    orientation="Vertical">
    <MDAppBar
      alignItemsHor="Start">
      <MDAppBarTitle
        text="Dialog">
      </MDAppBarTitle>
    </MDAppBar>
    <Element
      width="100%"
      height="100%"
      orientation="Vertical"
      scaling="Shrink">

      <MDFilledButton
        element="mDialogButton"
        label="_s(Show dialog)">
      </MDFilledButton>
     
    </Element>
    <MDDialog
      element="mDialog"
      width="280dp"
      height="150dp">

      <Element
        height="100%"
        width="100%"
        scaling="Shrink">
      </Element>
      <Element
        width="100%"
        alignItemsHor="End">
        <MDTextButton
          label="_s(Cancel)">
        </MDTextButton>
        <MDTextButton
          label="_s(Discard)">
        </MDTextButton>
      </Element>

    </MDDialog>
  </MDScaffold>

</MDElement>